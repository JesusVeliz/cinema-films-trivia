doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  // displays site properly based on user's device
  link(rel='icon' type='image/png' sizes='32x32' href='./images/favicon-32x32.png')
  //- title FRONT FILMS
  title #{titulo} | Index
  link(rel='stylesheet', href='./css/css2.css')
  link(rel='stylesheet' type='text/css' href='./css/generics.css')
  link(href='https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;700&family=Poppins:wght@300;400;700&display=swap' rel='stylesheet')
  
#spinner.show

.content
  h1.heading FILMS

  each movie in movies
      
    .card
      .frontWeb(style=`background-image: url(${movie.poster_path});`)  
        p=movie.title
      .back
        div
          .release_date=`${movie.title} `
            span= movie.release_year
          .movie_gens=movie.genres
          div=`‚≠ê${movie.vote_average}`
          p.overview=movie.overview
          a.button(target='_blank' href=`https://www.themoviedb.org/movie/${movie.id}`) Details
      
  
  if movies!=null 
    #spinner.show
  else
